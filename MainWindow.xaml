<Window x:Class="WPFHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFHello"
        mc:Ignorable="d"
        Title="메인화면" Height="200" Width="500">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left"
                   Margin="350, 50, 0, 0" Text="Hello World!" Height="50" Width="100" />
        <Button x:Name="button" Content="클릭하세요"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" Width="80" Click="button_click"/>
    </Grid>
</Window>
